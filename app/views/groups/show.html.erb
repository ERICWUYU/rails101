  <div class="col-md-12 p-3">
  <div class="container-fluid">
    <div class="d-flex">
      <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-outline-secondary ms-auto")%>
      <% if current_user && current_user == @group.user%>
          <%= link_to("Edit", edit_group_path(@group),    class: "btn btn-primary")%>
      <% end %> 
      
      <span>
        <% if current_user && current_user.is_member_of?(@group)%>
          <label class="btn btn-success" disabled>群组成员</label>
        <% else %>
          <label class="btn btn-warning" disabled>不是群组成员</label>
        <% end %>
      </span>
    </div>   
    <h2><%= @group.title %></h2>
    <p><%= @group.description %></p>
    <table class="table">
      <thead>
        <tr>
          <th>文章内容</th>
          <th>发表者</th>
          <th>发表时间</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.content %></td>
            <td><%= post.user.email %></td>
            <td><%= post.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class=" d-flex justify-content-center">
      <%= will_paginate @posts %>
    </div>
  </div>
</div>


 